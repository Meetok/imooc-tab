<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android" >
    <!-- 填充的颜色 --> 
    <solid android:color="#FFFEF2" />
    <!-- 设置按钮的四个角为弧形 --> 
    <!-- android:radius 弧形的半径 --> 
    <corners android:radius="10dip" /> 
    <!-- android:stroke 边框 --> 
    <stroke android:width="1dp" android:color="#EBE5AD"/>  
<!-- padding：Button里面的文字与Button边界的间隔 --> 
<padding 
   android:left="13dp" 
   android:top="13dp" 
   android:right="13dp" 
   android:bottom="13dp" 
/> 

</shape>