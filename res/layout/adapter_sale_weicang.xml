<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ffffff"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/liang"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/ll"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="3dp"
            android:background="#ffffff"
            android:orientation="vertical" >


                <ImageView
                    android:id="@+id/iv_adapter_grid_ProductPic"
                    android:layout_width="fill_parent"
                    android:layout_height="150dp"
                    android:layout_gravity="center"
                    android:adjustViewBounds="true"
                   android:scaleType="fitCenter" />


            <TextView
                android:id="@+id/iv_adapter_grid_title"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/tabbar_bg"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="母婴用品"
                android:textSize="12sp" />

            <RelativeLayout
                android:id="@+id/iv_adapter_lin"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/rmb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:text="￥"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/iv_adapter_jiage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/rmb"
                    android:text="jiage"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/kucuen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@+id/iv_adapter_kucuen"
                    android:text="库存: "
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/iv_adapter_kucuen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="kucuen"
                    android:textSize="10sp" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>